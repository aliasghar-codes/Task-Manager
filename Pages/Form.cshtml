@page
@model FormModel
@{
    ViewData["Title"] = "Skill Task Manager";
}

<h2>@ViewData["Title"]</h2>

<!-- Form to add new task -->
<form method="post" class="mb-4 form-container">
    <div class="form-group">
        <label asp-for="Task.TaskName">New Task</label>
        <textarea asp-for="Task.TaskName" class="form-control" rows="3" placeholder="Enter new task"></textarea>
        <span asp-validation-for="Task.TaskName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Task</button>
</form>

<!-- List of existing tasks -->
@if (Model.Tasks != null && Model.Tasks.Count > 0)
{
    <h3>Existing Tasks</h3>
    <ul class="list-group">
        @foreach (var task in Model.Tasks)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@task.TaskName</span>
                <div>
                    <form method="post" asp-page-handler="Delete" asp-route-formDataID="@task.FormDataID"
                          onsubmit="return confirm('Are you sure you want to delete this task?');" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p>No tasks added yet.</p>
}
